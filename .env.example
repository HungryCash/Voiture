# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Google Maps API (for route calculation and distance matrix)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Flight APIs
FLIGHTY_API_KEY=your_flighty_api_key_here
SKYSCANNER_API_KEY=your_skyscanner_api_key_here

# Transportation APIs (when available)
CITYBUS_API_KEY=your_citybus_api_key_here
JAGLINE_API_KEY=your_jagline_api_key_here

# Scooter Services APIs
VEO_API_KEY=your_veo_api_key_here
BIRD_API_KEY=your_bird_api_key_here

# NextAuth (for authentication - optional)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# IoT Sensors (Raspberry Pi/Flipper Zero)
IOT_API_ENDPOINT=your_iot_sensor_api_endpoint
IOT_API_KEY=your_iot_api_key
